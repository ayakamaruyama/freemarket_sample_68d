.main
  = render 'shared/sub_header'
  .main__single-container
    %h2.main__head-registration 会員情報登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "main__registar-form"}) do |f|
      = devise_error_messages!
      .main__single-content
        .main__form-group
          %label.main__nickname ニックネーム
          %span.main__form-require 必須
          = f.text_field :nickname, placeholder: "ニックネーム", class: "main__nickname-field" 

        .main__form-group
          %label.main__email メールアドレス
          %span.main__form-require 必須
          = f.email_field :email, placeholder: "PC携帯どちらでも可",class: "main__email-field"
        
        .main__form-group
          %label.main__password パスワード
          %span.main__form-require 必須
          = f.password_field :password, placeholder: "７文字以上の半角英数字", class: "main__password-field"
          %p.text2 ※英字と数字の両方を含めて設定してください
        .main__form-group
          %label.main__password パスワード（確認）
          %span.main__form-require 必須
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認のため、もう一度入力してください", class: "main__password-field"
          
        .main__form-group
          %label.main__name  お名前（全角）
          %span.main__form-require 必須
          %br
          = f.text_field :last_name, placeholder: "例）山田", class: "main__family-name-kanji"  
          = f.text_field :first_name, placeholder: "例) 彩", class: "main__first-name-kanji"  
           

        .main__form-group
          %label.main__name  お名前（全角）
          %span.main__form-require 必須
          %br
          = f.text_field :last_furigana, placeholder: "例）やまだ", class: "main__family-name-kana"  
          = f.text_field :first_furigana, placeholder: "例) あや", class: "main__first-name-kana"  
          
        .main__form-group
          %label.main__birthday 生年月日
          %span.main__form-require 必須
              
          .main__birthday-input
            .main__number-input
              != sprintf(f.date_select(:birthday,use_month_numbers:true, start_year:1900, end_year:2020, date_separator:'%s'),'年','月')+'日'
      
        .main__single-text
          = f.submit "次へ進む", class: "single-move-button"  
  = render 'shared/sub_footer'